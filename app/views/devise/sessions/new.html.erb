

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="login-field">
    <%= f.label :Eメール %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Eメール",class: 'login-form' %>
  </div>

  <div class="login-field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード",class: 'login-form'%>
  </div>

  <div class="login-actions">
    <%= f.submit "ログイン", class: "login-btn"%>
  </div>
<% end %>


